<div class="page-header">
  <h3>Movie #<%= @movie.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Title</dt>
      <dd><%= @movie.title %></dd>

      <dt>Year</dt>
      <dd><%= @movie.year %></dd>

      <dt>Director</dt>
      <dd><%= @movie.director_id %></dd>

      <dt>Image</dt>
      <dd><img src="<%= @movie.image %>" class="img-responsive"></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/movies" class="btn btn-primary">
        Back
      </a>
      <a href="/movies/<%= @movie.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_movie/<%= @movie.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Movie has many castings -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Castings
      </li>

      <% @movie.castings.each do |casting| %>
        <li class="list-group-item">
          <a href="/castings/<%= casting.id %>">
            <%= casting.title %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A Movie has many actors -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Actors
      </li>

      <% @movie.actors.each do |actor| %>
        <li class="list-group-item">
          <a href="/actors/<%= actor.id %>">
            <%= actor.title %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>
